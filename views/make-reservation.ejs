<!-- views/make-reservation.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Make Reservation</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <header>
    <h1>Make Reservation</h1>
    <nav>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/dashboard">Dashboard</a></li>
        <li><a href="vehicles">My Vehicles</a></li>
        <li><a href="/reservations">My Reservations</a></li>
        <li><a href="/transactions">Transaction History</a></li>
        <li><a href="/auth/logout">Logout</a></li>
      </ul>
    </nav>
  </header>

  <main>
    <form action="/reservations/new" method="POST">
      <label for="vehicleId">Select Vehicle:</label>
      <select id="vehicleId" name="vehicleId" required>
        <% vehicles.forEach(vehicle => { %>
          <option value="<%= vehicle.id %>"><%= vehicle.licensePlate %> - <%= vehicle.make %> <%= vehicle.model %></option>
        <% }) %>
      </select>

      <label for="startTime">Start Time:</label>
      <input type="datetime-local" id="startTime" name="startTime" required>

      <label for="endTime">End Time:</label>
      <input type="datetime-local" id="endTime" name="endTime" required>

      <button type="submit">Reserve</button>
    </form>

    <% if (errors.length > 0) { %>
      <ul>
        <% errors.forEach(error => { %>
          <li><%= error.msg %></li>
        <% }) %>
      </ul>
    <% } %>
  </main>
</body>
</html>
